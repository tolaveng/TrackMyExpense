{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "OidcSetting": {
    "ClientId": "api-client",
    "Issuer": "https://localhost:8081/",
    "RedirectUris": "https://oauth.pstmn.io/v1/callback, https://localhost:8081/",
    "PostLogoutRedirectUri": "https://localhost:8081/account/login",
    "AccessTokenLifetimeMinutes": 30,
    "RefreshTokenLifetimeDays": 7
  }
}
