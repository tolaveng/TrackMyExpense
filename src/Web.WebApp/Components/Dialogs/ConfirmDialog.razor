<MudDialog>
    <DialogContent>
        <MudText>@Message</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="OnSecondaryButtonClicked">@SecondaryButtonText</MudButton>
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="OnPrimaryButtonClicked">@PrimaryButtonText</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string Message { get; set; }

    [Parameter] public string SecondaryButtonText { get; set; } = "Cancel";
    [Parameter] public string PrimaryButtonText { get; set; } = "Confirm";

    [Parameter] public Color Color { get; set; } = Color.Primary;

    void OnSecondaryButtonClicked() => MudDialog.Cancel();
    void OnPrimaryButtonClicked() => MudDialog.Close(DialogResult.Ok(true));
    
}