<MudDialog>
    <DialogContent>
        <MudText>@Message</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="OnFirstButtonClicked">@FirstButtonText</MudButton>
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="OnSecondButtonClicked">@SecondButtonText</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string Message { get; set; }

    [Parameter] public string FirstButtonText { get; set; } = "Cancel";
    [Parameter] public string SecondButtonText { get; set; } = "Yes";

    [Parameter] public Color Color { get; set; } = Color.Primary;

    void OnFirstButtonClicked() => MudDialog.Cancel();
    void OnSecondButtonClicked() => MudDialog.Close(DialogResult.Ok(true));
    
}